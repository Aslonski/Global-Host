<div class="container">
  <%= image_tag "baker", alt: "user-profile-img", class: "circle responsive-img" %>
  <h5 class="col s12"><span class="category-title">Reviews For: <%= link_to "#{@user.first_name} #{@user.last_name}", user_path(@user) %></span></h5>
  <hr class="user-page-hr">
  <% @reviews.each do |review| %>
  <% author = User.find(review.reviewer_id) %>
  <ul>
    <li>
      <div class="col s12 m8 offset-m2 l6 offset-l3">
        <div class="card-panel grey lighten-5 z-depth-1 hoverable ">
          <div class="row valign-wrapper">
            <div class="col s10">
              <span class="black-text slightly-enlarge-text category-title">
                <%= review.title %> | score: <%= review.score %>
              </span>
              <br>
                <span class="category-title">
                  Reviewed by: <%= link_to "#{author.first_name } #{author.last_name}", user_path(review.reviewer_id) %>
                </span>
                <p class="black-text all-reviews-card left-align">
                  <%= review.body %>
                </p>
              </div>
              <hr class="user-page-hr">
            </div>
          </div>
        </div>
      </li>
    </ul>
    <% end %>

  </div>
