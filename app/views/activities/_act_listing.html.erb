<div class="row">
  <div class="col s12">
    <h5><%= activity.description %></h5>
  </div>
</div>


<% if activity.location.present? %>
<div class="location-detail z-depth-2">
  <div class="location-detail row">
    <div class="col s12">
      <p><%= activity.location.name %></p>
      <p><%= activity.location.address %></p>
      <p><%= activity.location.city %></p>
    </div>
  </div>
</div>
<% end %>

<div class="row">
  <div class="col s12">
    <%= link_to "Add a Location to This Activity", edit_itinerary_activity_path(activity.itinerary, activity), class: "waves-effect waves-light btn" %>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <%= link_to "Check In", class: "waves-effect waves-light btn" %>
  </div>
</div>
