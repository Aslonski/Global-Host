<div class="row">
  <div class="edit-user-form container col s12">
    <%= form_for @user, :html => { :method => :put} do |f| %>
      <%= render '/errors' %>
      <%= f.label :first_name %>:
      <%= f.text_field :first_name %>
      <%= f.label :last_name %>:
      <%= f.text_field :last_name %>
      <%= f.label :email %>:
      <%= f.text_field :email %>
      <%= f.label :city %>:
      <%= f.text_field :city %>
      <%= f.label :state_province %>:
      <%= f.text_field :state_province %>
      <%= f.label :country %>:
      <%= f.text_field :country %>
      <%= f.label :personal_info %>:
      <%= f.text_field :personal_info %>
      <%= f.label :language %>:
      <%= f.text_field :language %>
      <%= f.label :gender %>:
      <%= f.text_field :gender %>
      <%= f.check_box :is_host %>
      <%= f.label 'is_host', id:'is_host' %>
      <%= f.label :all_interests, 'Your interests (comma separated)' %>:
      <%= f.text_field :all_interests%>
      <%= f.submit "Save Changes", :class => "form-button waves-effect waves-light btn user-button" %>
    <% end %>
  </div>
</div>
